<fest:template xmlns:fest="http://fest.mail.ru">
	<div class="header">
		<h1 class="header__h1 header__h1_50">
			SIGN IN
    	</h1>
	</div>

	<div class="content">
		<!-- Error message -->
		<div class="content__alert content__alert_danger js-alert-error" style="display: none">
			<span>Authorization failed. Please check your login and password</span>
		</div>

		<form class="app-form form-horizontal js-sign-in-form">
			<div class="form-group form-group-lg">
				<div class="col-md-3">
					<label for="login" class="control-label app-form__label">Login</label>
				</div>
				<div class="col-md-9">
					<input type="login" name="login" class="form-control app-form__input" placeholder="login" />
				</div>
			</div>

			<div class="form-group form-group-lg">
				<div class="col-md-3">
					<label for="password" class="control-label app-form__label">Password</label>
				</div>
				<div class="col-md-9">
					<input type="password" class="form-control app-form__input" name="password" placeholder="password" />
				</div>
			</div>
			
			<div class="form-group form-group-lg">
				<div class="checkbox col-md-12">
  					<label class="app-form__label">
  						<input type="checkbox" name="remember" value="remember" checked="checked"/>Remember me!
  					</label>
				</div>
			</div>
			
			<button class="btn btn-primary btn-lg app-form__btn" type="submit" checked="true">Sign in</button>
		</form>
	</div>

	<div class="footer">
		<h3>
			<a href="#main" class="footer__a">
				<span class="glyphicon glyphicon-chevron-left"></span>
				MAIN MENU
			</a>
    	</h3>
	</div>
</fest:template>
